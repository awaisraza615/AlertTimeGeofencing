<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AddReminder">
    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <EditText
        android:id="@+id/rmadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="name"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/rmdate"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/rmdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Double click to open date dialog"
        app:layout_constraintBottom_toTopOf="@+id/rmtime"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/rmtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginBottom="20dp"
        android:hint="Double click to open time dialog"
        app:layout_constraintBottom_toTopOf="@+id/btnlocation"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#581845"
        android:text="Add Location"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/addremainder"
        tools:layout_editor_absoluteX="0dp" />

    <Button

        android:id="@+id/addremainder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="208dp"
        android:text="Add Reminder"
        android:textColor="#fff"
        android:background="#581845"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />
    />





</androidx.constraintlayout.widget.ConstraintLayout>